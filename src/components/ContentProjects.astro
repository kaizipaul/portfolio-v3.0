---
interface Project {
 name: string;
 description: string;
 link: {
  url?: string;
  target?: string;
  title?: string;
  buttonLabel?: string;
 };
}

const projects: Project[] = [
 {
  name: "Portfolio Site",
  description:
   "Built with one of NextJS portfolio templates, I aimed to create a minimalistic portfolio site using the popular framework with markdown file plugins (mdx)",
  link: {
   url: "https://github.com/kaizipaul/portfolio-v2.0",
  },
 },
 {
  name: "Blog App",
  description:
   "Blog App was built as a way to learn how to create a full-stack web application. The features include a login page, account creation, and post creation.",
  link: {
   url: "https://github.com/kaizipaul/blog-app",
  },
 },
 {
  name: "Budget App",
  description:
   "Built for mobile, Budget App is a Rails Web App designed to track a user's budget by entering their expenditure and adding them to their list. This app utilizes the knowledge of Full-Stack Development and Rails MVC (Model, View and Controller) architecture.",
  link: {
   url: "https://github.com/kaizipaul/budget-app",
  },
 },
];
---

<div>
 <!-- <h2 class="text-2xl font-bold text-white mb-4">Latest Projects</h2> -->

 <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
  {
   projects.map((project) => (
    <div class="flex flex-col justify-center items-start border border-gray-700 rounded-lg p-4 bg-black">
     <h3 class="text-xl font-semibold text-white mb-2">{project.name}</h3>

     <p class="text-gray-400">{project.description}</p>

     {project.link?.url ? (
      <a
       href={project.link.url}
       title={project.link.title || project.name}
       target={project.link.target || "_blank"}
       class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-gray-600 rounded-lg

                                hover:text-primary
                                hover:border-primary
                            "
      >
       {project.link.buttonLabel || "Open GitHub Repo"}
      </a>
     ) : null}
    </div>
   ))
  }
 </div>
</div>
