---
import { Code } from "astro:components";

const code = `interface Developer {
    name: string;
    skills: string[];
    interests: string[];
};

interface TechStack {
    devOps: string[];
    backend: string[];
   frontend: string[];
};

type ContactType = 'github' | 'twitter' | 'linkedIn' | 'email';

const techStack: TechStack = {
    devOps: [
        'GitLab',
        'GitHub',
        'Docker'
    ],
    frontend: [
        'React',
        'JavaScript',
        'TypeScript',
        'TailwindCSS',
        'Astro',
        'SCSS',
        'Markdown',
        'WordPress'
    ],
    backend: [
        'Supabase',
        'Ruby-on-Rails'
        'Node.js',
        'Bun',
        'Deno',
        'PostgreSQL',
        'MySQL',
    ]
};

// Developer profile
const me: Developer = {
    name: 'Paul Kaizirege',
    skills: [
        ...techStack.devOps,
        ...techStack.backend,
        ...techStack.frontend
    ],
    interests: [
        'Security',
        'Privacy',
        'Performance',
        'Self-Hosting',
        'Networking'
    ]
};

// Contact function
const contact = (type: ContactType): string => {
    switch (type) {
        case 'github':
            return 'https://github.com/kaizipaul';
        case 'twitter':
            return 'https://x.com/mykved';
        case 'linkedIn':
            return 'https://www.linkedin.com/in/kaizipaul';
        case 'email':
            return 'paulkaizirege@gmail.com';
        default:
            return 'Send fax.';
    }
};

`;
---

<Code code={code} lang="js" wrap={true} />

<style is:global>
  /* Custom styling for code block line numbers */
  pre.astro-code {
    @apply bg-transparent !important;
  }

  pre.astro-code code {
    @apply block;
    counter-reset: step;
    counter-increment: step 0;
  }

  pre.astro-code code .line {
    @apply relative;
  }

  pre.astro-code code .line::before {
    content: counter(step);
    counter-increment: step;
    @apply text-gray-600 pr-2;
  }

  code {
    font-family: "Jetbrains Mono", monospace;
    font-size: 0.85rem;
  }
</style>
